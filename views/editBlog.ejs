<%- include('components/header') %>

    <div class="container2">
        <h2>Submit Your Information</h2>
        <form action="/editBlog/<%- blogs[0].id %>" method="post">
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" value="<%- blogs[0].title %>" id="title" name="title" required>
            </div>
            <div class="form-group">
                <label for="subtitle">Subtitle:</label>
                <input type="text" value="<%- blogs[0].subtitle %>" id="subtitle" name="subtitle" required>
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <textarea id="description" name="description" rows="4" required><%- blogs[0].description %>
                </textarea>
            </div>
            <button type="submit">Submit</button>
        </form>
    </div>

    <%- include('components/footer') %>
